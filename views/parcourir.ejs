<div class="text-center mt-5">
    <a href="/parcourir" class="btn btn-<%= (type === 'all') ? "primary" : "secondary" %>">Tous</a>
    <a href="/parcourir/voiture" class="btn btn-<%= (type === 'voiture') ? "primary" : "secondary" %>">Voiture</a>
    <a href="/parcourir/moto" class="btn btn-<%= (type === 'moto') ? "primary" : "secondary" %>">Moto</a>

    <div class="d-flex justify-content-center flex-wrap mt-5">

        <% if (typeof messageFormulaire !=='undefined' ) { %>
            <div class="alert alert-success">
                Vehicule supprimé !
            </div>
            <% } %>

                <% lesVehicules.forEach(vehicule=> { %>
                    <div class="cardVehicule card mx-3">
                        <img src="<%= vehicule.image %>" width="240" height="160" class="card-img-top">
                        <div class="card-body text-center">
                            <h5 class="card-title ">
                                <%= vehicule.marque + ' ' + vehicule.modele %>
                            </h5>
                            <hr>
                            <p class="card-text mb-0">Année: <%= vehicule.annee %>
                            </p>
                            <p class="card-text mt-0">Kilométrage total: <%= vehicule.km %>
                            </p>
                            <a href="/vehicule/<%= vehicule._id %>" class="btn btn-primary"><i
                                    class="fa-solid fa-up-right-from-square"></i></a>

                            <% if (auth && auth.identifiant==vehicule.vendeur) { %>
                                <button class="btn btn-danger" onclick="supprimerVehicule('<%= vehicule._id %>')"><i
                                        class="fa-solid fa-trash"></i></button>
                                <% } %>
                        </div>
                    </div>
                    <% }) %>
    </div>
</div>